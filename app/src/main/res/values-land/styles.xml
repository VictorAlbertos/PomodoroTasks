<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="button">
        <item name="android:layout_width">@dimen/_150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="buttonColor">@color/red</item>
        <item name="cornerRadius">@dimen/_3dp</item>
        <item name="shadowColor">@color/dark_red</item>
        <item name="shadowEnabled">true</item>
        <item name="shadowHeight">@dimen/_3dp</item>
    </style>

</resources>
