<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/sp_base_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        app:ms_alignLabels="false"
        app:ms_floatingLabelColor="@color/dark_red"
        app:ms_floatingLabelText="@string/to_do_list"
        app:ms_highlightColor="@color/red"
        app:ms_hint="@string/select_to_do_list"
        app:ms_multiline="true" />

    <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pw_loading"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@color/background"
        android:visibility="invisible"
        wheel:matProg_barColor="@color/red"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>