<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10dp"
    card_view:cardBackgroundColor="@color/light_gray"
    card_view:cardCornerRadius="@dimen/_4dp"
    card_view:cardElevation="@dimen/_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/texts" />

        <custom_views.PomodoroCountDownView_

            android:id="@+id/tv_time_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/texts"
            android:textStyle="bold" />

        <info.hoang8f.widget.FButton xmlns:fbutton="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="sans-serif"
            android:text="@string/watch"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            fbutton:buttonColor="@color/red"
            fbutton:cornerRadius="@dimen/_3dp"
            fbutton:shadowColor="@color/dark_red"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="@dimen/_3dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
